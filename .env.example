# Environment Variables for Job Finder Web Application

# Database connection string (required)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost/jobfinder

# Gemini API key for LLM features (required for scraping)
GEMINI_API_KEY=your_gemini_api_key_here

# Flask secret key for session management (required)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=change_this_to_a_random_secret_key

# Flask debug mode (optional, default: true)
FLASK_DEBUG=true

# Port to run the web server (optional, default: 5000)
PORT=5000

# Logging level (optional, default: INFO)
LOG_LEVEL=INFO
